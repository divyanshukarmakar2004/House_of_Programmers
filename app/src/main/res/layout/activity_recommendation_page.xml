<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecommendationPage">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

       <androidx.cardview.widget.CardView
           android:layout_width="300dp"
           android:layout_height="300dp"
           android:id="@+id/cv1"
           app:cardElevation="10dp"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="50dp"
           app:cardCornerRadius="30dp">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/img1"
                   android:src="@drawable/urea"/>


           </RelativeLayout>



       </androidx.cardview.widget.CardView>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nitrogen Fertilizer"
            android:layout_below="@+id/cv1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_bold"
            android:textSize="30dp"
            android:id="@+id/t1"/>

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analyis"
            android:layout_below="@+id/t1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="23dp"
            android:id="@+id/t2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agronomy rule-of-thumb:\n1 ppm = 2Kg/ha = 0.80937 Kg/ha\nRequired ppm change: 3.7 ppm\n1 ha=2.47105 acre."
            android:layout_below="@+id/t2"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins"
            android:textSize="20dp"
            android:id="@+id/t3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nitrogen Content"
            android:layout_below="@+id/t3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="23dp"
            android:id="@+id/t4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urea ≈ 46% N\nCAN ≈ 26% N\nAmmonium sulfate ≈ 21% N\nDAP ≈ 18% N"
            android:layout_below="@+id/t4"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins"
            android:textSize="20dp"
            android:id="@+id/t5"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nitrogen Requirements"
            android:layout_below="@+id/t5"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="23dp"
            android:id="@+id/t6"/>



        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_below="@id/t6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:minHeight="100dp"
            android:layout_height="wrap_content"

            app:cardElevation="15dp"
            app:cardCornerRadius="20dp"
            android:id="@+id/cv2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/arrow"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="2dp"

                    app:cardBackgroundColor="#fcfdff">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/grass2"
                            android:layout_centerInParent="true"/>





                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Nitrogen"
                    android:layout_toRightOf="@+id/arrow"

                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#3d434f"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="20dp"

                    android:id="@+id/t15"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.2 Kg/acre"
                    android:layout_toRightOf="@+id/arrow"
                    android:layout_below="@id/t15"
                    android:layout_marginRight="20dp"
                    android:textColor="#3d434f"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="23dp"
                    android:id="@+id/t16"
                    />















            </RelativeLayout>




        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="350dp"

            android:layout_below="@id/cv2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:minHeight="100dp"
            android:layout_height="wrap_content"


            app:cardElevation="15dp"
            app:cardCornerRadius="20dp"
            android:id="@+id/cv3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/arrow2"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    app:cardCornerRadius="100dp"

                    app:cardElevation="2dp"

                    app:cardBackgroundColor="#aeffbc">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/nitrogenicon"
                            android:layout_centerInParent="true"/>





                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Urea"
                    android:layout_toRightOf="@+id/arrow2"

                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#3d434f"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="20dp"

                    android:id="@+id/ut1"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.2 Kg/acre"
                    android:layout_toRightOf="@+id/arrow2"
                    android:layout_below="@id/ut1"
                    android:layout_marginRight="20dp"
                    android:textColor="#3d434f"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="23dp"
                    android:id="@+id/ut2"
                    />















            </RelativeLayout>




        </androidx.cardview.widget.CardView>




        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:minHeight="100dp"
            android:layout_height="wrap_content"

            android:layout_below="@id/cv3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:cardElevation="15dp"
            app:cardCornerRadius="20dp"
            android:id="@+id/cv4">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/arrow3"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="2dp"

                    app:cardBackgroundColor="#dbeafe">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/moisture"
                            android:layout_centerInParent="true"/>





                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CAN"
                    android:layout_toRightOf="@+id/arrow3"

                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#3d434f"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="20dp"

                    android:id="@+id/ut3"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.2 Kg/acre"
                    android:layout_toRightOf="@+id/arrow3"
                    android:layout_below="@id/ut3"
                    android:layout_marginRight="20dp"
                    android:textColor="#3d434f"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="23dp"
                    android:id="@+id/ut4"
                    />















            </RelativeLayout>




        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:minHeight="100dp"
            android:layout_height="wrap_content"

            android:layout_below="@id/cv4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:cardElevation="15dp"
            app:cardCornerRadius="20dp"
            android:id="@+id/cv5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/arrow4"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="2dp"

                    app:cardBackgroundColor="#fffd9c">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/posphorunicon"
                            android:layout_centerInParent="true"/>





                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ammonium sulfate"
                    android:layout_toRightOf="@+id/arrow4"

                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#3d434f"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="20dp"

                    android:id="@+id/ut5"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.2 Kg/acre"
                    android:layout_toRightOf="@+id/arrow4"
                    android:layout_below="@id/ut5"
                    android:layout_marginRight="20dp"
                    android:textColor="#3d434f"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="23dp"
                    android:id="@+id/ut6"
                    />















            </RelativeLayout>




        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="350dp"

            android:layout_below="@id/cv5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:minHeight="100dp"

            app:cardElevation="15dp"
            app:cardCornerRadius="20dp"
            android:id="@+id/cv6">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/arrow5"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="2dp"

                    app:cardBackgroundColor="#fbd5ff">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/potasicon"
                            android:layout_centerInParent="true"/>





                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DAP"
                    android:layout_toRightOf="@+id/arrow5"

                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#3d434f"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="20dp"

                    android:id="@+id/ut7"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.2 Kg/acre"
                    android:layout_toRightOf="@+id/arrow5"
                    android:layout_below="@id/ut7"
                    android:layout_marginRight="20dp"
                    android:textColor="#3d434f"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="23dp"
                    android:id="@+id/ut8"
                    />















            </RelativeLayout>




        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fertilizer Recommendation\n(Based on Budget)"
            android:layout_below="@+id/cv6"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"

            android:fontFamily="@font/poppins_semibold"
            android:textSize="23dp"
            android:id="@+id/t7"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"


            android:layout_below="@id/t7"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/l1">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/c2"
                android:background="#FFFFFF"
                android:layout_height="350dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Image at the top -->
                    <ImageView
                        android:id="@+id/card_image2"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/tagmycin" />

                    <!-- Text below the image -->
                    <TextView
                        android:id="@+id/card_text2"
                        android:layout_width="368dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/card_image2"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="left"
                        android:text="Tagmycin 6gm\nPrice: Rs. 10,000"
                        android:textColor="#38893C"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="15dp"
                        android:id="@+id/button1"
                        android:layout_centerHorizontal="true"
                        android:clickable="true"
                        android:focusable="true"

                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="#98ff98">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="center"

                                android:paddingHorizontal="24dp"

                                android:paddingVertical="12dp"
                                android:text="Buy"
                                android:textColor="#2f7f33"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>





            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                app:cardCornerRadius="20dp"
                android:layout_weight="1"
                android:id="@+id/c3"
                android:background="#FFFFFF"

                android:layout_height="350dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Image at the top -->
                    <ImageView
                        android:id="@+id/card_image3"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/syng" />

                    <!-- Text below the image -->
                    <TextView
                        android:id="@+id/card_text3"
                        android:layout_width="368dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/card_image3"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="left"
                        android:text="Syngenta Amistar Top Fungicide (100 ml)\nPrice: Rs. 12,500 "
                        android:textColor="#38893C"
                        android:textSize="17sp"
                        android:textStyle="bold" />




                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"

                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"
                        android:id="@+id/button2"
                        android:layout_centerHorizontal="true"
                        android:clickable="true"
                        android:focusable="true"

                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="#98ff98">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="center"

                                android:paddingHorizontal="24dp"

                                android:paddingVertical="12dp"
                                android:text="Buy"
                                android:textColor="#2f7f33"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>





            </androidx.cardview.widget.CardView>






        </LinearLayout>
















    </RelativeLayout>




</ScrollView>